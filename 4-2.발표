        "#300번의 에포크동안의기록한 점수그래프 그리기\n",
        "plt.plot(train_score)\n",
        "plt.plot(test_score)\n",
        "plt.xlabel('epoch')  \n",
        "plt.ylabel('accuracy')\n",
        "plt.show()"
